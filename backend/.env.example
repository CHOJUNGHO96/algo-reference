# Complete Database URL (used by Alembic directly)
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/algoref

# Database - External PostgreSQL Server (used by app/core/config.py)
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB=algoref
POSTGRES_SCHEMA=public

# Security
SECRET_KEY=change_this_to_random_secret_key_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# API
API_V1_PREFIX=/api/v1

# AI Content Generation
ANTHROPIC_API_KEY=your_anthropic_api_key_here
